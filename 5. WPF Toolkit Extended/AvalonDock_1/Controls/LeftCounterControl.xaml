<UserControl x:Class="ToDo.WPF.Core.Controls.LeftCounterControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" x:Name="Control" d:DesignHeight="450" d:DesignWidth="150" mc:Ignorable="d">
    <Grid>
        <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Run Text="{Binding Path=Value, ElementName=Control}" />
            <Run Text="items left" />
        </TextBlock>
    </Grid>
</UserControl>
